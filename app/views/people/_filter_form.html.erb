<%= form_tag '/people/filter', :method => :get, :remote => true, :id => "people-filter-form" do %>

    <%= text_field_tag 'filter_last_name', nil, :class => 'person-name' %>

    <%= text_field_tag 'filter_first_name', nil, :class => 'person-name' %>

    <%= text_field_tag 'filter_ssn', nil, :class => 'person-ssn' %>

    <%= text_field_tag 'filter_age', nil, :class => 'person-age' %>

    <%= submit_tag 'Apply', :id => 'filter-apply-button' %>

    <%= button_tag 'Cancel', :id => 'filter-cancel-button', :type => 'button' %>

<% end %>