<%= form_for(person, :remote => true, :html => { :id => "people-form" }) do |f| %>

  <div class="field">
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.text_field :ssn, :size => 11 %>
  </div>
  <div class="field">
    <%= f.text_field :age, :size => 3 %>
  </div>
    <div class="person-action-button">
      <%= f.submit 'Save' %>
    </div>
<% end %>

<div class="person-action-button">
  <%= button_tag 'Cancel', :id => 'cancel-button' %>
</div>
